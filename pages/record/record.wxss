/* pages/record/record.wxss */
.record{
  padding: 28rpx;
  border-bottom: 1rpx solid #e9e9e9;
  background-color: #fff;
}
.record :last-child{
  border-bottom: none;
}
.record .item{
  display: flex;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #333;
}
.record .item-spec{
  justify-content: space-between;
}
.record .item i{
  color: #666;
  flex-shrink:0;
}
.null{
  padding-top: 200rpx;
}
.null image{
  display: block;
  margin: 0 auto;
  width: 354rpx;
  height: 184rpx;
}
.null text{
  display: block;
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
}
